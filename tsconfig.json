{
  "extends": "expo/tsconfig.base",
  "include": ["./App.tsx", "./src/**/*.ts", "./src/**/*.tsx"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "jsx": "react-native",
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@/*": ["./src/*"],
      "@assets/*": ["./src/assets/*"],
      "@utils/*": ["./src/utils/*"],
      "@components/*": ["./src/components/*"],
      "@styles/*": ["./src/styles/*"],
      "@screens/*": ["./src/screens/*"]
    }
  }
}
